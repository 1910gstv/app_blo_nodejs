<%- include ('../../partials/header.ejs') %>
<%- include ('../../partials/homenavbar.ejs') %>
<body>
    <div class="container">

        <% result.articles.rows.forEach(article => { %>
            <div class="card mt-3">
                <div class="card-header">
                    <h2> <%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-dark">Ler Artigos</a>
                </div>
            </div>
        <% }) %>

        <div class="row mt-3 mb-3">
            <div class="col col-12">

                <% if(result.page > 2) { %>
                    <a href="/articles/page/<%= result.page - 1 %>" class="text-decoration-none float-start"> <<< Prev </a>
                <% } else if(result.page == 2) { %>
                    <a href="/" class="text-decoration-none float-start"> <<< Prev </a>
                <% } %>

                <% if(result.next) { %>
                <a href="/articles/page/<%= result.page + 1 %>" class="text-decoration-none float-end">Next >>></a>
                <% } %>
            </div>
        </div>

    </div>
</body>
<%- include ('../../partials/footer.ejs') %>
    <div class="card mt-5">
        <div class="card-header">
            <h1>Login de admin</h1>
        </div>
        <div class="card-body">
            <form method="POST" action="/authenticate">
                <input class="form-control" type="email" name="email" placeholder="email@exemplo.com"><br>
